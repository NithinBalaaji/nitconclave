<%include ../partials/header%>
<div class="card">
    <!-- <div class="text-center card-header">
    </div> -->
    <div class="card-body">
        <h1 class="display-4 text-center"><%=project.name%></h1>
        <h2 class="text-center p-4">Admin Panel</h2>
    </div>
</div>
<div class="card" style="width: 40%;margin: auto">
    <div class="card-body">
        <section>
            <h3 class="text-center pb-4">Member requests</h3>
            <table class="table" style="table-layout:fixed;">
                <tbody>
                    <col width="70%" />
                    <col width="15%" />
                    <col width="15%" />
                    <%project.requests.forEach(request=>{%>
                    <tr>
                        <td style="overflow: hidden;" class="text-center"><a href="</users/<%=request._id%>">
                                <%=request.username%>
                            </a></td>
                        <td style="overflow: hidden;">
                            <form action="/projects/<%=project._id%>/accept/<%=request._id%>" method="POST">
                                <button style="all: unset;"><i class="ti-check"></i></button>
                            </form>
                        </td>
                        <td style="overflow: hidden;">
                            <form action="/projects/<%=project._id%>/reject/<%=request._id%>" method="POST">
                                <button style="all: unset;"><i class="ti-close"></i></button>
                            </form>
                        </td>
                    </tr>
                    <%})%>
                </tbody>
            </table>
            </ul>
        </section>
    </div>
</div>

<%include ../partials/footer%>